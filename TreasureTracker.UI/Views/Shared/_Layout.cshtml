<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TreasureTracker.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
          integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <!--Navbar  -->
    <div class="navbar">
        <ul>
            <li class="navbar-item">
                <a href="#">Home</a>
            </li>
            <li class="navbar-item">
                <a href="#">Products</a>
            </li>
            <li class="navbar-item">
                <a href="#">About</a>
            </li>
            <li class="navbar-item">
                <a href="#">Home</a>
            </li>
        </ul>

        <!--Language dropdown-->
        <div class="dropdown">
            <div class="wrapper">
                <img src="./SiteImages/united-states-of-america.png" class="selectedImg" alt="image">
                <div class="selected">English</div>
            </div>
            <i class="fa-solid fa-caret-down lan"></i>

            <!-- Dropdown items-->
            <div class="list">
                <div class="item">
                    <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en">
                        <img src="./SiteImages/united-states-of-america.png" alt="image">
                        <span class="text">English</span>
                    </a>
                </div>

                <div class="item">
                    <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="uz">
                        <img src="./SiteImages/uzbekistan.png" alt="image">
                        <span class="text">Uzbek</span>
                    </a>
                </div>
            </div>
        </div>
        <!--End of language dropdown-->

        <!--Darkmode-Lightmode-button-->
        <div class="btn">
            <div class="btn__indicator">
                <div class="btn__icon-container">
                    <i class="btn__icon fa-solid"></i>
                </div>
            </div>
        </div>
        <!--End of Darkmode-Lightmode-button-->

        <!-- User profile dropdown-->
        <div class="user-box">
            <div class="user-img" onclick="userAvatar()">
                <img src="./SiteImages/profile-pic.jpg" alt="img">
            </div>
            <div class="user-dropdown" id="user-dropdown">
                <a class="user__dropdown__item"> First Name: Gulchapcha</a>
                <a class="user__dropdown__item"> Last Name: Gulchapcha</a>
                <a class="user__dropdown__item"> Email: gulchapcha@gmail.com</a>
                <a class="user__dropdown__item">Profile</a>
                <hr>
                <button class="user-btn">
                    Logout
                </button>
            </div>
        </div>
        <!-- user avatar end -->
    </div>

    <!-- Main page-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
